<div class="page-header">
  <h1>
    Artworks
    <a href="/artworks/new" class="btn btn-lg btn-success">New Artwork</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image url</th>
        <th>Tag</th>
        <th>Actions</th>
      </tr>

      <% @artworks.each do |artwork| %>
      <tr>
        <td><%= artwork.caption %></td>
        <td><%= artwork.image_url %></td>
        <td><%= artwork.tag %></td>
        <td>
          <a href="/artworks/<%= artwork.id %>" class="btn btn-primary">Show</a>
          <a href="/artworks/<%= artwork.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_artwork/<%= artwork.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @artworks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
