<div class="page-header">
  <h1>
    Artworks
    <a href="/artworks/new" class="btn btn-lg btn-success">New Artwork</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "artworks_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :caption_cont, "Caption contains" %>
    <%= f.text_field :caption_cont, :class => "form-control", :placeholder => "Caption contains" %>
  </div>

<div class="form-group">
    <%= f.label :for_sale_eq, "For sale" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :for_sale_eq, "1", checked: ((params[:q] && params[:q][:for_sale_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :for_sale_eq, "0", checked: ((params[:q] && params[:q][:for_sale_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :for_sale_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
  <%= f.label :cost, "Cost" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :cost_gteq, :class => "form-control", :placeholder => "Cost greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :cost_lteq, :class => "form-control", :placeholder => "Cost less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :edition, "Edition" %>
  <div class="row">
    <div class='col-md-6 mb-1'>
      <%= f.text_field :edition_gteq, :class => "form-control", :placeholder => "Edition greater than or equal to" %>
    </div>
    <div class='col-md-6'>
      <%= f.text_field :edition_lteq, :class => "form-control", :placeholder => "Edition less than or equal to" %>
    </div>
  </div>
</div>

<div class="form-group">
    <%= f.label :image_url_cont, "Image url contains" %>
    <%= f.text_field :image_url_cont, :class => "form-control", :placeholder => "Image url contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :users_email_cont, "User email contains" %>
      <%= f.text_field :users_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Tag Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='tagsgteqcreated_atPicker'>
                  <%= f.text_field :tags_created_at_gteq, :class => "form-control", :placeholder => "Tag Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='tagslteqcreated_atPicker'>
                  <%= f.text_field :tags_created_at_lteq, :class => "form-control", :placeholder => "Tag Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#tagsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#tagslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#tagsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#tagslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#tagslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#tagsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/artworks" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#artworks_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Caption</th>
        <th>Image url</th>
        <th>Edition</th>
        <th>Cost</th>
        <th>For sale</th>
        <th>Actions</th>
      </tr>

      <% @artworks.each do |artwork| %>
      <tr>
        <td><%= artwork.caption %></td>
        <td><%= artwork.image_url %></td>
        <td><%= artwork.edition %></td>
        <td><%= artwork.cost %></td>
        <td><%= artwork.for_sale %></td>
        <td>
          <a href="/artworks/<%= artwork.id %>" class="btn btn-primary">Show</a>
          <a href="/artworks/<%= artwork.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_artwork/<%= artwork.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @artworks, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
