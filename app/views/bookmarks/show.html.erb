<div class="page-header">
  <h3>Bookmark #<%= @bookmark.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Artwork</dt>
      <dd>
        <% if @bookmark.artwork.present? %>
          <a href="/artworks/<%= @bookmark.artwork_id %>">
            <%= @bookmark.artwork.caption %>
          </a>
        <% end %>
      </dd>

      <dt>Folder</dt>
      <dd>
        <% if @bookmark.folder.present? %>
          <a href="/folders/<%= @bookmark.folder_id %>">
            <%= @bookmark.folder.name %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/bookmarks" class="btn btn-primary">
        Back
      </a>
      <a href="/bookmarks/<%= @bookmark.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_bookmark/<%= @bookmark.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
