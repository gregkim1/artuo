<!-- Validation failure messages -->
<% if @ownership.errors.any? %>
  <% @ownership.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Ownership</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_ownership" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <input type="hidden" name="user_id" value="<%= current_user.id %>">

      <!-- Label and input for artwork_id -->
      <div class="form-group">
        <label for="artwork_id" class="control-label">
          Artwork
        </label>

        <%= select_tag(:artwork_id, options_from_collection_for_select(Artwork.all, :id, :caption, @ownership.artwork_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Ownership
      </button>
      or
      <a href="/ownerships">Cancel</a>
    </form>
  </div>
</div>
